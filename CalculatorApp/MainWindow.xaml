<Window x:Class="CalculatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Window.Resources>
        <SolidColorBrush x:Key="numbersColor" Color="#444444" />
        <SolidColorBrush x:Key="operatorsColor" Color="Orange" />
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="0" x:Name="lblResult"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               FontSize="60"
               Grid.ColumnSpan="4"/>
        <Button Content="AC" Margin="5" Grid.Row="1" x:Name="btnAC"/>
        <Button Content="+/-" Margin="5" Grid.Row="1" Grid.Column="1" x:Name="btnPlusMinus"/>
        <Button Content="%" Margin="5" Grid.Row="1" Grid.Column="2" x:Name="btnPercentage"/>
        <Button Content="/" Click="OperatinBtn_Click" Margin="5" 
                Grid.Row="1" Grid.Column="3" x:Name="btnDivide"
                Background="{StaticResource operatorsColor}" Foreground="White"
                />

        <Button Content="7" Margin="5" Grid.Row="2" x:Name="btn7" 
                Click="btnNumber_Click" 
                Background="{StaticResource numbersColor}" Foreground="White"
                />
        <Button Content="8" Click="btnNumber_Click" Margin="5" Background="{StaticResource numbersColor}" Foreground="White"
                Grid.Row="2" Grid.Column="1" x:Name="btn8"/>
        <Button Content="9" Background="{StaticResource numbersColor}" Foreground="White"
                Click="btnNumber_Click" Margin="5" Grid.Row="2" Grid.Column="2" x:Name="btn9"/>
        <Button Content="*" Click="OperatinBtn_Click" Margin="5" 
                Grid.Row="2" Grid.Column="3" x:Name="btnMultiply"
                Background="{StaticResource operatorsColor}" Foreground="White"
                />

        <Button Content="4" Background="{StaticResource numbersColor}" Foreground="White"
                Click="btnNumber_Click" Margin="5" Grid.Row="3" x:Name="btn4" />
        <Button Content="5" Background="{StaticResource numbersColor}" Foreground="White"
                Click="btnNumber_Click" Margin="5" Grid.Row="3" Grid.Column="1" x:Name="btn5"/>
        <Button Content="6" Background="{StaticResource numbersColor}" Foreground="White" 
                Click="btnNumber_Click" Margin="5" Grid.Row="3" Grid.Column="2" x:Name="btn6"/>
        <Button Content="-" Click="OperatinBtn_Click" Margin="5" 
                Grid.Row="3" Grid.Column="3" x:Name="btnMinus" 
                Background="{StaticResource operatorsColor}" Foreground="White"
                />

        <Button Content="1" Background="{StaticResource numbersColor}" Foreground="White"
                Click="btnNumber_Click" Margin="5" Grid.Row="4" x:Name="btn1"/>
        <Button Content="2" Background="{StaticResource numbersColor}" Foreground="White"
                Click="btnNumber_Click" Margin="5" Grid.Row="4" Grid.Column="1" x:Name="btn2"/>
        <Button Content="3" Background="{StaticResource numbersColor}" Foreground="White"
                Click="btnNumber_Click" Margin="5" Grid.Row="4" Grid.Column="2" x:Name="btn3"/>
        <Button Content="+" Click="OperatinBtn_Click" Margin="5"
                Grid.Row="4" Grid.Column="3" x:Name="btnPlus"
                Background="{StaticResource operatorsColor}" Foreground="White"
                />

        <Button Content="0" Background="{StaticResource numbersColor}" Foreground="White"
                Click="btnNumber_Click" Margin="5" Grid.Row="5" Grid.ColumnSpan="2" x:Name="btn0"/>
        <Button Content="." Background="{StaticResource numbersColor}" Foreground="White"
                Margin="5" Grid.Row="5" Grid.Column="2" x:Name="btnDot" Click="btnDot_Click"/>
        <Button Content="=" Margin="5" Grid.Row="5" 
                Grid.Column="3" x:Name="btnEqual"
                Background="{StaticResource operatorsColor}" Foreground="White"
                />

    </Grid>
</Window>
